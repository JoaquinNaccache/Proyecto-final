@using System.Data.SqlClient;
@using Dapper;

<div class="container py-5">
    <!-- Encabezado de bienvenida con una tipografía moderna y centrado -->
    <div class="welcome-header text-center mb-5">
        <h1 class="display-4 font-weight-bold text-primary">Bienvenidos a Edu Plus</h1>
        <p class="lead text-secondary">Encuentra los mejores cursos para mejorar tus habilidades y conocimientos</p>
    </div>

    <!-- Contenedor de las tarjetas de cursos -->
    <div class="row curso-cards-container">
        @foreach(Cursos curso in ViewBag.todosCursos)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img class="card-img-top img-fluid" src="@curso.imagen" alt="Imagen del curso">
                    <div class="card-body">
                        <h5 class="card-title text-dark font-weight-bold">@curso.nombreCurso</h5>
                        <p class="card-text text-secondary">Explora los detalles del curso y mejora tus conocimientos.</p>
                        <a href='@Url.Action("VerDetalleCursos", "Home", new { idCurso = curso.idCurso })' class="btn btn-primary-custom btn-block">Ver detalle</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- CSS mejorado -->
<style>
    .welcome-header h1 {
        color: #007bff;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .curso-cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .card {
        transition: transform 0.2s ease-in-out;
        border-radius: 10px;
    }

    .card:hover {
        transform: scale(1.03);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body h5 {
        font-size: 1.25rem;
    }

    .card-text {
        font-size: 0.9rem;
        color: #666;
    }

    /* Estilo del botón con el mismo color del título */
    .btn-primary-custom {
        background-color: #007bff; /* Mismo color que el título */
        color: white;
        border-radius: 50px;
        transition: background-color 0.3s, box-shadow 0.3s;
        padding: 10px 20px;
        font-size: 1rem;
    }

    .btn-primary-custom:hover {
        background-color: #0056b3; /* Color más oscuro al hacer hover */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

</style>



