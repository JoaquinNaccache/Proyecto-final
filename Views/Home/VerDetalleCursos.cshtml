@using System.Data.SqlClient;
@using Dapper;

@foreach(Cursos curso in @ViewBag.UnicoCurso)
        {
                <tr>
                    <h1>@curso.nombreCurso</h1>
                        <td>@curso.descripcion</td>
                        <td>@curso.temario</td>
